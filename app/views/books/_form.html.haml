= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :descirption
    = f.text_field :descirption
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :in_stock
    = f.text_field :in_stock
  - if @book.new_record?
    .field
      = f.label "author:"
      = collection_select(:authors, :id, Author.all - @book.authors, :id, :full_name, {:include_blank => 'Please Select'}, { class: 'selectpicker' })
    .field
      = f.label "category:"
      = collection_select(:categories, :id, Category.all - @book.categories, :id, :title, :include_blank => 'Please Select')
  .actions
    = f.submit 'Save'
