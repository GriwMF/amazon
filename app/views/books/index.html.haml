- if customer_signed_in? && current_customer.admin?
  = link_to 'New Book', new_book_path
  = link_to 'Check ratings', ratings_check_ratings_path

%h1 Listing books

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Price
      %th Rating
      - if customer_signed_in?
        %th In stock
        - if current_customer.admin?
          %th
          %th
      %th
  %tbody
    - @books.each do |book|
      %tr
        %td= link_to book.title, book
        %td= book.price
        %td= book.rating
        - if customer_signed_in?
          %td= book.in_stock
          - if current_customer.admin?
            %td= link_to 'Edit', edit_book_path(book)
            %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }
        %td= link_to 'Add to cart', "#{orders_path}/add_item/#{book.id}", :method => :post if book.in_stock > 0

%br


