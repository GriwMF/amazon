= form_for current_customer do |f|
  - if current_customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(current_customer.errors.count, "error")} prohibited this author from being saved:"
      %ul
        - current_customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .actions
    = f.submit 'Save'
