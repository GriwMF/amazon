= form_for @credit_card do |f|
  - if @credit_card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@credit_card.errors.count, "error")} prohibited this credit_card from being saved:"
      %ul
        - @credit_card.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :firstname
    = f.text_field :firstname, class: 'form-control'
  .form-group
    = f.label :lastname
    = f.text_field :lastname, class: 'form-control'
  .form-group
    = f.label :number
    = f.text_field :number, class: 'form-control'
  .form-group
    = f.label :cvv
    = f.text_field :cvv, class: 'form-control'
  .form-group
    = f.label :expiration_month
    = f.text_field :expiration_month, class: 'form-control'
  .form-group
    = f.label :expiration_year
    = f.text_field :expiration_year, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-default'
