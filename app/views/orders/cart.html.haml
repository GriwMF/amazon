- unless @order.order_items.any?
  %h1.center= t('add_to_cart_first')
- else
  %b= t('order_items')
  = render 'order', order: @order, can_cancel: true
  .text-right
    %h2
      = t('total_price')
      .label.label-info
        = "$#{@order.total_price}"
  = link_to t('empty_cart'), check_out_1_orders_path, class: 'btn btn-default'
  = link_to t('continue_shopping'), books_path, class: 'btn btn-default'

  .text-right
    = link_to t('empty_cart'), check_out_1_orders_path, class: 'btn btn-default'

  = render 'check_out'