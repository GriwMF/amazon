%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true, class: 'form-control devise-field'
  .form-group
    = f.label :firstname
    %br/
    = f.text_field :firstname, :autofocus => true, class: 'form-control devise-field'
  .form-group
    = f.label :lastname
    %br/
    = f.text_field :lastname, :autofocus => true, class: 'form-control devise-field'    
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, :autocomplete => "off", class: 'form-control devise-field'
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, class: 'form-control devise-field'
  .form-group
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, class: 'form-control devise-field'
  %div= f.submit "Update", class: "btn btn-default"
%br/
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
= link_to "Back", :back
